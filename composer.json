{
    "name": "laravel-shift/package-registry",
    "description": "A registry of core Laravel and community package dependencies",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shift",
            "email": "support@laravelshift.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Shift\\Packages\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "download-tags": "curl -so data/laravel-tags.json https://laravelshift.com/api/tags",
        "download-packages": "curl -so data/laravel-packages.json https://laravelshift.com/api/packages",
        "test": [
            "@download-packages",
            "@download-tags",
            "vendor/bin/phpunit"
        ]
    }
}
